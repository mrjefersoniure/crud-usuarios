<?php if ($this->pageCount): ?>
    <div class="paginationControl">
    <!-- Previous strona -->
    <?php if (isset($this->previous)): ?>
      <a href="<?= $this->url($this->route, ['id' => 'list', 'page' => $this->previous]); ?>">
        < Previous
      </a> |
    <?php else: ?>
      <span class="disabled">< Previous</span> |
    <?php endif; ?>

    <!-- Numery stron -->
    <?php foreach ($this->pagesInRange as $page): ?>
      <?php if ($page != $this->current): ?>
        <a href="<?= $this->url($this->route, ['id' => 'list', 'page' => $page]); ?>">
            <?= $page; ?>
        </a> |
      <?php else: ?>
        <?= $page; ?> |
      <?php endif; ?>
    <?php endforeach; ?>

    <!-- Next strona -->
    <?php if (isset($this->next)): ?>
      <a href="<?= $this->url($this->route, ['id' => 'list', 'page' => $this->next]); ?>">
        Next >
      </a>
    <?php else: ?>
      <span class="disabled">Next ></span>
    <?php endif; ?>
    </div>
<?php endif; ?>